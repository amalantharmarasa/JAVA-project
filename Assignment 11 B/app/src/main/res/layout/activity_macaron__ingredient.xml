<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Macaron_Ingredient">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="526dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/macoran" />

        <TextView
            android:id="@+id/txtTlttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:text="@string/macaron"
            android:textColor="#f9cb231a"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txting"
            android:layout_width="248dp"
            android:layout_height="208dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="122dp"
            android:background="#d86ac7"
            android:text="1 cup (100gr) almond flour. 3/4 cup (100gr) powdered sugar. 2 tablespoons (10gr) natural cocoa  powder. 2 large egg whites (75gr), at room temperature. ¼ teaspoon cream of tartar. ¼ cup  (50gr) sugar. 1 teaspoon coarse sea salt, optional."
            android:textAlignment="center"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>