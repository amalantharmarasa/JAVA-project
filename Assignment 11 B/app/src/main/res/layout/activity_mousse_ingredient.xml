<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mousse_ingredient">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="526dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mmousse" />

        <TextView
            android:id="@+id/txtMoussee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="@string/mousee"
            android:textColor="#466046"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtIng"
            android:layout_width="248dp"
            android:layout_height="251dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="101dp"
            android:background="#7d5858"
            android:text="Pour the cream into a chilled bowl of a mixer and beat on medium speed until it starts to thicken.  Add the sugar and vanilla and whisk until the cream starts to form stiff peaks. Carefully fold the  whipped cream into the cooled chocolate mixture. Serve immediately or cover and chill until  ready to serve"
            android:textAlignment="center"
            android:textColor="#eee6e6"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>