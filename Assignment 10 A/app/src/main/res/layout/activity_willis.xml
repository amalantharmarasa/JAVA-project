<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Willis">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="526dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ImageView
            android:id="@+id/Willis_Tower"
            android:layout_width="match_parent"
            android:layout_height="493dp"
            android:layout_below="@+id/txtWillis"
            android:contentDescription="@string/willis"
            app:srcCompat="@drawable/willis"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="51dp" />

        <TextView
            android:id="@+id/txtWillis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/willistxt"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/txtColor"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="16dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>