<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts">

    <RelativeLayout
        android:id="@+id/bkg"
        android:layout_width="368dp"
        android:layout_height="526dp"
        android:background="#d3c419"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/acticonta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/title_activity_Card"
            android:textAlignment="center"
            android:textColor="@color/activicontclo"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="91dp"
            android:layout_height="93dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/acticonta"
            app:srcCompat="@drawable/call" />

        <TextView
            android:id="@+id/txtnem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="@string/txtname"
            android:textAlignment="center"
            android:textColor="@color/txtcloname"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:text="@string/txtphone"
            android:textAlignment="center"
            android:textColor="#9f33d1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:text="@string/txtemail"
            android:textAlignment="center"
            android:textColor="@color/cloemail"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtweb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txtweb"
            android:textAlignment="center"
            android:textColor="@color/webclo"
            android:textSize="24sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>