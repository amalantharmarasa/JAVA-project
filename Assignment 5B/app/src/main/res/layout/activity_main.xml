<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/appbkg"
        android:layout_width="344dp"
        android:layout_height="550dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCost"
            android:layout_centerHorizontal="true"
            android:text="*" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="@string/txtTitle"
            android:textAlignment="center"
            android:textColor="@color/ticketvalutcolor"
            android:textSize="@dimen/titleSize" />

        <EditText
            android:id="@+id/txtTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:hint="@string/txtTickets"
            android:inputType="number"
            android:textSize="@dimen/numberofticketSize" />

        <Spinner
            android:id="@+id/txtGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="206dp"
            android:entries="@array/txtGroup"
            android:prompt="@string/prompt"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btnCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/btnCost" />

        <ImageView
            android:id="@+id/imgConcer"
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/description"
            app:srcCompat="@drawable/concert" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtResult"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-225dp"
            android:text="*" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>