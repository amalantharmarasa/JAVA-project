<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Med_Calculator">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="526dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="@string/txtTitle"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/hint"
            android:inputType="number"
            android:textColor="#FF0000" />

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="290dp"
            android:layout_height="145dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtWeight"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="139dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radKiloToLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RadioKilotoLb"
                android:textColor="#0000FF" />

            <RadioButton
                android:id="@+id/radLbToKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioTokilo"
                android:textColor="#0000FF" />
        </RadioGroup>

        <Button
            android:id="@+id/btnConver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="153dp"
            android:text="@string/btnConvert" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="96dp"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>